<!DOCTYPE html>
<html>
<head>
    <!-- Include your head content here -->
</head>
<body>
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">Movie Selection</h1>

        <!-- Movie search form -->
        <form method="post" action="/movieselect">
            <input type="text" name="search" placeholder="Search for a movie">
            <button type="submit">Search</button>
        </form>

        <!-- Display movie results here -->
        <div id="movieResults" class="mt-8">
            <h2 class="text-xl font-semibold mb-2">Movie Results:</h2>
            <ul>
                {{#each movies}}
                <li>
                    {{title}}
                    <img src="https://image.tmdb.org/t/p/w185/{{poster_path}}" alt="{{title}}">
                    <!-- Use a form for each movie to allow selecting it -->
                    <form method="post" action="/movieselect/select">
                        <input type="hidden" name="title" value="{{title}}">
                        <input type="hidden" name="imdbID" value="{{imdbID}}">
                        <button type="submit">Select</button>
                    </form>
                </li>
                {{/each}}
            </ul>
        </div>

        <!-- Display selected movies here -->
        <div id="selectedMovies" class="mt-8">
            <h2 class="text-xl font-semibold mb-2">Selected Movies:</h2>
            <ul>
                {{#each selectedMovies}}
                <li>{{title}}</li>
                {{/each}}
            </ul>
        </div>

        <!-- Include your client-side JavaScript here if needed -->
    </div>
</body>
</html>
