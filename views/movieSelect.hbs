<body>
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">Movie Selection</h1>

        <!-- Movie search form -->
        <form action="/movieselect" method="POST">
            <input
                type="text"
                id="searchQuery"
                name="searchQuery"
                class="border border-gray-300 p-2 w-full rounded-l"
                placeholder="Search for movies..."
            />
            <button
                type="submit"
                class="bg-blue-500 text-white p-2 rounded-r hover:bg-blue-600 cursor-pointer"
            >
                Search
            </button>
        </form>

        <!-- Display movie results here -->
        <div id="movieResults" class="mt-8">
            <h2 class="text-xl font-semibold mb-2">Movie Results:</h2>
            <ul>
                {{#each formattedMovies}}
                <li>{{title}}</li>
                {{/each}}
            </ul>
        </div>

        <!-- Include your client-side JavaScript here if needed -->
    </div>
</body>